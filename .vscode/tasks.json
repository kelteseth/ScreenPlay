{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "all"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "type": "shell",
            "label": "🛫 Run setup.py",
            "command": "uv run Tools/setup.py",
        },
        {
            "type": "shell",
            "label": "⚙️ Build Godot Wallpaper plugin",
            "command": "uv run Tools/build_godot.py --build_path ${command:cmake.buildDirectory}/bin",
        },
        {
            "type": "shell",
            "label": "⚙️ Build ScreenPlay release, with deploy and steam enabled",
            "windows": {
                "command": "uv run Tools/build.py  --preset=windows-deploy-release"
            },
            "linux":{
                "command": "uv run Tools/build.py  --preset=linux-deploy-release"
            },
            "osx":{
                "command": "uv run Tools/build.py  --preset=mac-deploy-release"
            }
        },
        {
            "type": "shell",
            "label": "📃 Format Cpp files",
            "command": "uv run Tools/check_format_cpp.py",
        },
        {
            "type": "shell",
            "label": "📃 Format CMake files",
            "command": "uv run Tools/check_format_cmake.py",
        },
        {
            "type": "shell",
            "label": "📃 Format Qml files",
            "command": "uv run Tools/check_format_qml.py",
        },
        {
            "type": "shell",
            "label": "🗨️ Update Qt *.ts translations",
            "command": "uv run Tools/update_translations.py",
        }
    ]
}
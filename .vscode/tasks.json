{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "all"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "type": "process",
            "label": "üõ´ Run setup.py",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "setup.py"
            ]
        },
        {
            "type": "process",
            "label": "‚öôÔ∏è Build Godot Wallpaper plugin",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "build_godot.py",
                "--build_path",
                "${command:cmake.buildDirectory}/bin"
            ]
        },
        {
            "type": "process",
            "label": "‚öôÔ∏è Build ScreenPlay release, with deploy and steam enabled",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "osx": {
                "args": [
                    "build.py",
                    "--type=release",
                    "--deploy-version",
                    "--steam"
                ]
            },
            "args": [
                "build.py",
                "--type=release",
                "--deploy-version",
                "--steam"
            ]
        },
        {
            "type": "process",
            "label": "üìÉ Format Cpp files",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "check_format_cpp.py"
            ]
        },
        {
            "type": "process",
            "label": "üìÉ Format CMake files",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "check_format_cmake.py"
            ]
        },
        {
            "type": "process",
            "label": "üìÉ Format Qml files",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "check_format_qml.py"
            ]
        },
        {
            "type": "process",
            "label": "üó®Ô∏è Update Qt *.ts translations",
            "command": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "command": "${workspaceFolder}/.venv/Scripts/python.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/Tools"
            },
            "args": [
                "update_translations.py"
            ]
        }
    ]
}